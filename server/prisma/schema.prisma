generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quote {
  id            String   @id @default(uuid())
  content       String
  author        String
  tags          String[]
  authorSlug    String
  length        Int
  dateAdded     DateTime @default(now())
  dateModified  DateTime @updatedAt
  externalId    String   @unique

  @@map("quotes")
}
